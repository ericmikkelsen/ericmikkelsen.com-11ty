<!doctype html>
<html lang="en">
    <head>
        <title>{{title}}</title>
        {% if description %}
            <meta name="Description" content="{{description}}">
        {% endif %}
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/style.css">
        <style>
            html {
                --color: #{{colors}};
                --bg-color-donut: url("data:image/svg+xml,%3Csvg viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg' width='100' height='100'%3E%3Ccircle cx='50' cy='50' r='50' fill='%23{{colors}}'  /%3E%3Ccircle cx='20' cy='20' r='20' fill='black' transform='translate(30,30)' /%3E%3C/svg%3E");
            }
        </style>
    </head>
    <body>
        <div class='skip'>
            <a class='skip__link' href="#h1">Skip to content</a>
        </div>
        <nav>
            <a 
                href="/" 
                {{ "aria-current=page" if page.url == "/"}}
            >
                Eric Mikkelsen
            </a>
            <ul>
                {% for link in nav %}
                    <li>
                        <a 
                            href="{{link.url}}"
                            {{ "aria-current=page" if link.url == page.url}}
                        >
                            {{link.text}}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </nav>